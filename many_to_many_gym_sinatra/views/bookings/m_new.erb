<h1>Book a class for a member</h1>
<hr>
<% exclude_sessions = @this_member.exclude_sessions() %>
<% avail = @this_member.available_sessions(exclude_sessions) %>
  <form class="" action="/bookings/:id" method="post">
    <p>
    <label for="member-selection">Member:
    <select class="" name="member_id" id="member-selection">
      <% for member in @members %>
      <option value="<%= member.id %>" <%= "selected" if @this_member.id == member.id %>><%= member.member_name %>
      </option>
      <% end %>
    </select></label>
    <label for="session-selection">Session:
    <select class="" name="session_id" id="session-selection">
      <% for session in avail %>

        <option value="<%= session.id %>"><%= session.course.type %> - <%= session.start_time %>
        </option>
      <% end %>
    </select></label>
  </p>
  <p>
    <div class="update-delete">
      <input type="submit" name="" value="Save Booking">
    </div>
  </p>
  </form>

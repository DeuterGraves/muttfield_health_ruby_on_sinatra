<h1>Book a member into a session</h1>
<hr>
<% not_these = @this_session.exclude_members() %>
<% these = @this_session.available_members(not_these) %>
<p>
  <form class="" action="/bookings/:id" method="post">
    <label for="member-selection">Member:
    <select class="" name="member_id" id="member-selection">
      <% for member in these %>
      <option value="<%= member.id %>"><%= member.member_name %>
      </option>
      <% end %>
    </select>
    </label>
    <label for="session-selection">Session:
    <select class="" name="session_id" id="session-selection">
      <% for session in @sessions %>
      <option value="<%= session.id %>" <%= "selected" if @this_session.id == session.id %>><%= session.course.type %> - <%= session.start_time %>
      </option>
      <% end %>
    </select>
    </label>
    <p>
    <div class="update-delete">
      <input type="submit" name="" value="Save Booking">
    </div>
  </p>
  </form>
</p>

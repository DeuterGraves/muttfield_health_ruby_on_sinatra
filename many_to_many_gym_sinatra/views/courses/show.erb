<h1>Course Details:</h1>
<p>Type: <span class="detail-title"><%= @course.type %></span></p>
<p>
  <div class="update-delete">
    <form method="get" action="/courses/<%= @course.id %>/edit">
      <input type="submit" value="Update Course">
    </form>
    <form method="post" action="/courses/<%= @course.id %>/delete">
      <input type="submit" value="Delete Course"/>
    </form>
  </div>
</p>
<p><a href="/sessions/<%= @course.id %>/new">Add to Schedule</a></p>
<p><h2> <%= @course.type %> Schedule:</h2> </p>
<% @sessions.each do |session| %>
<p><%= session.course.type %> - <%= session.start_time %></p>
<p>
  <div class="update-delete">
    <form method="get" action="/sessions/<%= session.id %>/edit">
      <input type="submit" value="Update Session">
    </form>
    <form method="post" action="/sessions/<%= session.id %>/delete">
      <input type="submit" value="Delete Session"/>
    </form>
  </div>
</p>
<hr>
<% end %>

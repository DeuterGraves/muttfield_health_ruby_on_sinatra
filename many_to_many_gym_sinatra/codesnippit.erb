

<label for="session-selection">Session:</label>
<select class="" name="session_id" id="session-selection">
  <% for session in @sessions %>
  <option value="<%= session.course.type - session.start_time %>" <%= "selected" if <% @booking.session.id == session.id %>><%= course.type %></option>
  <% end %>
</select>
